{
  "manifest_version": 3,
  "name": "Smart Privacy Extension",
  "version": "1.0",
  "description": "A personal dashboard for web privacy and utility.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "http://localhost:9002/*"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:9002; object-src 'self'"
  }
}
