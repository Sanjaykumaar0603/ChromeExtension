{
  "manifest_version": 3,
  "name": "Smart Privacy Extension",
  "version": "1.0",
  "description": "Manage your privacy settings for microphone and camera.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:9002/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
