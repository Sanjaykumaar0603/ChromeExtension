{
  "manifest_version": 3,
  "name": "Smart Privacy Extension",
  "version": "1.0",
  "description": "A personal dashboard for web privacy and utility.",
  "permissions": ["storage", "activeTab", "tabCapture"],
  "host_permissions": ["http://localhost:9002/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src http://localhost:9002/;"
  }
}
