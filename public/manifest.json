{
  "manifest_version": 3,
  "name": "Smart Privacy Extension",
  "version": "1.0",
  "description": "A personal dashboard for web privacy and utility.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabCapture"
  ],
  "host_permissions": [
    "http://localhost:9002/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "http://localhost:9002/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
