{
  "manifest_version": 3,
  "name": "Smart Privacy Extension",
  "version": "1.0",
  "description": "A smart privacy dashboard for your browser.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabCapture"
  ],
  "host_permissions": [
    "http://localhost:9002/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Privacy"
  }
}
